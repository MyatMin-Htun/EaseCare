<androidx.cardview.widget.CardView android:id="@+id/View1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:id="@+id/Card1"
    android:layout_width="match_parent"
    android:layout_height="400px"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/hexagon"
            android:layout_margin="0dp"/>
        <ImageView
            android:src="@drawable/malariapic_art"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"

            />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/DocLayout1"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        >
        <TextView
            android:id="@+id/txtDocName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dr.Kyaw Si Thu(MBBS)"
            android:textColor="#000"
            android:textSize="16dp"
            android:textAlignment="viewStart"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hospitalLayout1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_below="@id/DocLayout1">

        <ImageView
            android:src="@drawable/ic_local_hospital_red"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Yangon Public Hospital"
            android:textColor="#000"
            />

    </LinearLayout>

</RelativeLayout>
</androidx.cardview.widget.CardView>